<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.baselibrary.widget.PowerfulEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="自带清除文本功能"
        app:baselib_funcType="canClear" />

    <com.example.baselibrary.widget.PowerfulEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="自带查看密码功能"
        android:inputType="textPassword"
        app:baselib_funcType="canWatchPwd" />

    <com.example.baselibrary.widget.PowerfulEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/testlibrary_uu"
        android:drawableRight="@mipmap/testlibrary_uu"
        android:hint="控制两侧图标大小"
        app:baselib_leftDrawableHeight="40dp"
        app:baselib_leftDrawableWidth="40dp"
        app:baselib_rightDrawableHeight="30dp"
        app:baselib_rightDrawableWidth="30dp" />

    <com.example.baselibrary.widget.PowerfulEditText
        android:id="@+id/pet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/baselib_search"
        android:hint="自定义右侧图标点击事件" />

</LinearLayout>
