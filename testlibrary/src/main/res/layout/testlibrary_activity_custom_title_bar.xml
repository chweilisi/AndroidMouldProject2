<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lee="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.baselibrary.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        lee:baselib_right_button_drawable="@mipmap/baselib_titlebar_add_icon"
        lee:baselib_title_background_color="@color/baselib_green"
        lee:baselib_title_text="标题1" />

    <com.example.baselibrary.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        lee:baselib_right_button_visible="false"
        lee:baselib_title_background_color="@color/baselib_green"
        lee:baselib_title_text="标题2" />

    <com.example.baselibrary.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        lee:baselib_left_button_text="左边"
        lee:baselib_right_button_text="右边"
        lee:baselib_title_background_color="@color/baselib_red"
        lee:baselib_title_text="标题3" />

    <com.example.baselibrary.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        lee:baselib_left_button_text="左边"
        lee:baselib_right_button_drawable="@mipmap/baselib_titlebar_add_icon"
        lee:baselib_title_background_color="@color/baselib_red"
        lee:baselib_title_text="标题4" />

    <com.example.baselibrary.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        lee:baselib_left_button_text="左边"
        lee:baselib_left_button_text_color="@color/baselib_red"
        lee:baselib_right_button_drawable="@mipmap/baselib_titlebar_add_icon"
        lee:baselib_title_background_color="@color/baselib_blue"
        lee:baselib_title_text="标题5" />

    <com.example.baselibrary.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        lee:baselib_left_button_text="左边"
        lee:baselib_left_button_text_color="@color/baselib_red"
        lee:baselib_right_button_drawable="@mipmap/baselib_titlebar_add_icon"
        lee:baselib_title_background_color="@color/baselib_blue"
        lee:baselib_title_text="标题6"
        lee:baselib_title_text_color="@color/baselib_black" />

</LinearLayout>
