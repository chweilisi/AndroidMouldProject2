<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <com.example.baselibrary.widget.CustomRatingStar
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        app:baselib_clickable="true"
        app:baselib_space="0.2"
        app:baselib_starDst="@mipmap/baselib_star_gray"
        app:baselib_starNumber="5"
        app:baselib_starSrc="@mipmap/baselib_star_yellow"
        app:baselib_step="0.5" />

    <com.example.baselibrary.widget.CustomRatingStar
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:baselib_clickable="true"
        app:baselib_space="1"
        app:baselib_starDst="@mipmap/baselib_star_gray"
        app:baselib_starNumber="5"
        app:baselib_starSrc="@mipmap/baselib_star_yellow"
        app:baselib_step="0.1" />

    <com.example.baselibrary.widget.CustomRatingStar
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:baselib_clickable="true"
        app:baselib_space="1"
        app:baselib_starDst="@mipmap/baselib_star_gray"
        app:baselib_starNumber="5"
        app:baselib_starSrc="@mipmap/baselib_star_yellow"
        app:baselib_step="1" />

</LinearLayout>